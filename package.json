{
  "name": "electron-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --hot --host 0.0.0.0 --config webpack.dev.config.js --mode development",
    "build": "cross-env NODE_ENV=production webpack --config webpack.build.config.js --mode production",
    "prod": "npm run build && electron --noDevServer .",
    "package": "npm run build",
    "postpackage": "electron-packager ./ --out=./build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Karan9034/electron-react-boilerplate.git"
  },
  "author": "Karan Agrawal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Karan9034/electron-react-boilerplate/issues"
  },
  "homepage": "https://github.com/Karan9034/electron-react-boilerplate#readme",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@electron/remote": "^1.1.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.0",
    "electron": "^12.0.2",
    "electron-packager": "^15.2.0",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^5.3.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  }
}
